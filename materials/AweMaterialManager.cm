package custom.awesome.materials;

public class AweMaterialManager {

    public Snapper owner;
    public UserMaterials userMaterials();
    public str->AweBindingSnapperPickSurface surfaces();

    public constructor(Snapper owner) {
        this.owner = owner;
    }   

    extend public Primitive3D apply(AweObject model, str materialPropKey, Primitive3D prim) {
        Material m = getMaterial(model, materialPropKey);
        if(!m) return prim;
        m.apply(prim, new FetchEnv3D());

        //TODO: activate this once all materials are being set via this method
        // str pickSurfaceID = model.toS # materialPropKey;
        // AweBindingSnapperPickSurface surface(this.owner, prim, pickSurfaceID);
        // surface.configurator = model;
        // surface.propKey = materialPropKey;
        // prim.setOwner(surface);
        // userMaterials.registerEmptyKey(pickSurfaceID);
        return prim;
    }

    extend private Material getMaterial(AweObject model, str materialPropKey) {
        var aweMaterial = model.get(materialPropKey).?AweMaterial;
        if(!aweMaterial)
            return fallbackMaterial();
        return aweMaterial.materialInstance();
    }

    extend public void clear() {
        //resets material keys
        this.userMaterials.remove();
    }

    /**
     * use this to return the material to be used when something goes wrong
     */
    extend public Material fallbackMaterial() {
        return material("plain_red");
    }
}