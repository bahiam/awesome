package custom.awesome;

public class AweEnum extends AweEnumBase : abstract {
    private ObjectSubSet _domain;
    
    public ObjectSubSet domain() {
        if (this._domain) {
            return this._domain;
        }

        return this._domain = new ObjectSubSet(this.entries().:Object[]);
    }
    
    public bool equal(Object other, EqualEnv env=EqualEnv()) {
        if (other as AweEnum) {
            return this.class == other.class and this.key == other.key;
        }

        return super(..);
    }

    extend public bool operator==(Object other) {
        return this.equal(other);
    }
}

public class AweEnumBase : abstract {
    public str key;
    public str value;

    public constructor() {
    }

    public constructor(str key, str value) {
        this.key = key;
        this.value = value;
    }

    public constructor(<str, str> entry) {
        this(entry.v0, entry.v1);
    }

    extend public AweEnumBase[] entries() : abstract {}
    extend public ObjectSubSet domain() : abstract {}

    public aweDynamicContract {
        aweDynamic str toStr(str extraInfo);
    }

    extend public str toStr(str extraInfo) {
        if (extraInfo == "value") {
            return this.value;
        }

        return this.key;
    }

    public str toS() {
        return this.value;
    }
}

