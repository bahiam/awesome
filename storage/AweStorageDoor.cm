package custom.awesome.storage;

public const double storagePullOffsetFromPieceTop = 1inch;

public class AweStorageDoor extends AweStorageGridPiece {
    public angle pullRotation;
    public bool writeable;
    public AwePullType pullType;
    private Point2D _pullPosition;
    private bool useLargeIfPossible;

    public constructor(awePullType pullType, bool writeable = false, double leftOffset = 0.03125inch, double rightOffset = 0.03125inch, double topOffset = 0.03125inch, double bottomOffset = 0.03125inch, bool useLargeIfPossible = false) {
        this.pullType = pullType;
        this.writeable = writeable;
        this.leftOffset = leftOffset;
        this.rightOffset = rightOffset;
        this.topOffset = topOffset;
        this.bottomOffset = bottomOffset;
        this.useLargeIfPossible = useLargeIfPossible;
    } 

    public constructor(point2D pullPosition, angle pullRotation = 0deg, awePullType pullType = awePullType.square, bool useLargeIfPossible = false) {
        this.pullPosition = pullPosition;
        this.pullRotation = pullRotation;
        this.pullType = pullType;
        this.useLargeIfPossible = useLargeIfPossible;
    }   

    extend public str getPullTypeFileName(awePullType pt) {
        switch (pt) { 
            case awePullType.arch: return "arch-pull";
            case awePullType.bar: { 
                return this.useLargeIfPossible ? "large-bar-pull" : "bar-pull";
            }
            case awePullType.linear: return "linear-pull";
            case awePullType.straight: return "straight-pull";
            case awePullType.square:
            default: { 
                return "square-pull";
            }
        }
    }

    public Awe3D get3D() {
        Awe3D prims();

        if (pullType) {
            Primitive3D pull = aweCm3DLoader.get3D(this.getPullTypeFileName(pullType.v), storageCm3DFolder);
            pull.setMaterial(owner.getMaterial("pull"));
            prims << pull.setPosRot((pullPosition.x, 0, pullPosition.y), (0deg, pullRotation, 0deg));
        }

        if (writeable) {
            Primitive3D writeableFront = AweBox3D(box((0, -0.01inch, 0), (width, 0, height)), owner.getMaterial("front"));
            writeableFront.setMaterial(owner.getMaterial("writeableFront"));
            prims << writeableFront;
        }

        prims << AweBox3D(box((0 + leftOffset, 0, bottomOffset), (width - rightOffset, depth, height - topOffset)), owner.getMaterial("front"));
        return Awe3D(prims);
    }

    public Graph get2D() {
        Graph[] graph();

        Graph pull = aweCm3DLoader.getGraph(this.getPullTypeFileName(pullType.v), storageCm3DFolder # "/2D");
        pull.move((pullPosition.x, 0, pullPosition.y));
        pull.rotate(pullRotation);

        graph << pull;
        graph << GRect(rect((0 + leftOffset, 0), (width - rightOffset, depth)));

        return GInstance(graph);
    }

    extend public point2D pullPosition() {
        if (_pullPosition == null) {
            return (width/2, height - storagePullOffsetFromPieceTop);
        }
        return _pullPosition.v;
    }

    extend public point2D pullPosition=(point2D value){
        this._pullPosition = new Point2D (value); 
        return this._pullPosition.v;
    }
}

